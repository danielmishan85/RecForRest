<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postsFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.recforrest.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.recforrest.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/postsFragment"
        android:name="com.example.recforrest.PostsFragment"
        android:label="fragment_posts"
        tools:layout="@layout/fragment_posts" />
    <action android:id="@+id/action_global_signUpFragment" app:destination="@id/signUpFragment" />
    <fragment
        android:id="@+id/chooseSignInOrUpFragment"
        android:name="com.example.recforrest.ChooseSignInOrUpFragment"
        android:label="fragment_choose_sign_in_or_up"
        tools:layout="@layout/fragment_choose_sign_in_or_up" /><action android:id="@+id/action_global_chooseSignInOrUpFragment" app:destination="@id/chooseSignInOrUpFragment"/>
</navigation>